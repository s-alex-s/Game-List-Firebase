<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edit_game_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="Game name"
            android:autofillHints="" />

        <EditText
            android:id="@+id/edit_game_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="Game date"
            android:autofillHints="" />

        <EditText
            android:id="@+id/edit_game_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="Game genre"
            android:autofillHints="" />

        <Button
            android:id="@+id/edit_game_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clicked_save"
            android:text="Save" />

        <Button
            android:id="@+id/edit_game_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clicked_delete"
            android:text="Delete" />

        <Button
            android:id="@+id/edit_game_b_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clicked_cancel"
            android:text="Cancel" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>